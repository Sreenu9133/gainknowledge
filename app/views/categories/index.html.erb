<div class="container">
  <div class="row justify-content-center">
    <% @categories.each do |category|%>
      <div class="card m-3" style="width: 18rem;">
       <%= image_tag 'cardlogo.jpg', class:"d"%>
        <div class="card-body" style="background-color: black;">
          <h5 class="card-title" style="color: white;"><%= category.name%> </h5>
          <p class="card-text" style="color: white;"><%= category.description %></p>
          <%= link_to "#{category.name}", category_path(category.id), class: "btn btn-outline-primary"%>
        </div>
      </div>
    <% end %>
      
      <br>
    
  </div>
