
<%= form_with model: booking do |form| %>

<div class="m-4 field form-group">
  <%= form.label :first_name, class: "form-label" %> 
  <%= form.text_field :first_name, class: "form-control" %>
</div>

<div class="m-4 field form-group">
  <%= form.label :last_name, class: "form-label" %>
  <%= form.text_field :last_name, class: "form-control" %>
</div>

<div class="m-4 field form-group">
  <%#= form.label :user_id, class: "form-label" %>
  <%= form.hidden_field :user_id, value: current_user.id, class: "form-control" %>
</div>

<div class="m-4 field form-group">
  <%#= form.label :course_id, class: "form-label" %>
  <%= form.hidden_field :course_id, class: "form-control" %>
</div>


<div class="m-4 field form-group">
  <%= form.label :email, class: "form-label" %>
  <%= form.text_field :email, class: "form-control" %>
</div>

<div class="m-4 field form-group">
  <%= form.label :mobile_number, class: "form-label" %>
  <%= form.text_field :mobile_number, class: "form-control" %>
</div>

<div class="m-4 field form-group">
  <%= form.label :address, class: "form-label" %>
  <%= form.text_field :address, class: "form-control" %>
</div>

<div class="m-4 field form-group">
  <%= form.label :course_name, class: "form-label" %>
  <%#= form.select :course_name, Course.all.pluck(:course_name) %>
  <%= form.text_field :course_name, value: @booking.course.course_name, class: "form-control" %>
</div>
<center>
<div class="m-4 field form-group">
  <%= form.submit %>
</div>
</center>
<% end %>
